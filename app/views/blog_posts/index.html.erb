<h1>Really Super Blog</h1>
<h4>Recent Posts</h4>

<div class="row">
  <% @blog_posts.each do |blog_post| %>
      <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
        <%= link_to blog_post.title, blog_post %>
        </div>
        <div class="panel-body">
        by <%= blog_post.user.username %>
        at <%= blog_post.created_at.strftime('%m/%d/%Y %H:%M:%S') %>
        <p><%= blog_post.blog_entry[0..150] %>...
        <%=link_to "Read more...#{blog_post.title}", blog_post %></p>
        </div>
        <div class="panel-footer">
        
        <%= link_to 'Edit', edit_blog_post_path(blog_post),
        class: "btn btn-warning" %>
        <%= link_to 'Delete', blog_post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      </div>
    </div>
    </div>
   <% end %>
