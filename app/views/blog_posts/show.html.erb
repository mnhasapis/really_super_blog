<p id="notice"><%= notice %></p>

<div class= "panel panel-primary">
  <div class= "panel panel-heading">
  <%= @blog_post.title %>
  </div>

<div class="panel panel-body">
  <p>by <%= @blog_post.author %>
  at: <%= @blog_post.created_at.strftime('%m/%d/%Y %H:%M:%S') %>
  </p>
  <p><%= @blog_post.blog_entry %></p>
</div>
</div>

<div class = "panel panel-success">
  <div class = "panel-heading">
    Make a comment
  </div>
<div class = "panel-body">
  <%= render 'comments/form' %>
</div>

<div class = "panel panel-default">
  <div class = "panel-header">
    <h4>Comments</h4>
  </div>
  <% @blog_post.comments.each do |comment| %>
    <div class = "panel-body">
      <p><strong><%= comment.author %></strong> at <%=comment.created_at.strftime('%m/%d/%Y %H:%M:%S') %> said: </p>
      <p><%= comment.comment_entry %> </p>
    </div>
    <% end %>
</div> 

</div>
<div>
<%= link_to 'Edit', edit_blog_post_path(@blog_post) %> 
<%= link_to 'Back', blog_posts_path %>
</div>